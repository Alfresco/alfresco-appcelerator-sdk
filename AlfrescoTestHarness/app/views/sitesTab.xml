            </Templates>
            
            <ListSection title="My Sites" id="mysites"/>
            <ListSection title="All Sites" id="allsites"/>
            <ListSection title="Favourite Sites" id="favsites"/>
            
		</ListView>
	
	</Window>

</Alloy>
