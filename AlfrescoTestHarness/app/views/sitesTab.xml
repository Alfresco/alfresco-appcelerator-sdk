	<Window>
	
		<Label id="info">
		
		<ListView id="siteList" defaultItemTemplate="siteTemplate">
			
			 <Templates>
                <ItemTemplate name="siteTemplate">
    				<ImageView id="picImage" bindId="pic"/>
