<Alloy>
	
	<Window>
			
		<ListView id="siteList" defaultItemTemplate="siteTemplate">
			
			 <Templates>
                <ItemTemplate name="siteTemplate">
    				<ImageView id="picImage" bindId="pic"/>
    				<Label id="infoLabel" bindId="info"/>
    				<Label id="esinfoLabel" bindId="es_info"/>
                </ItemTemplate>
            </Templates>
            
            <ListSection headerTitle="My Sites" id="mySites"/>
            <ListSection headerTitle="All Sites" id="allSites"/>
            <ListSection headerTitle="Favourite Sites" id="favSites"/>
		</ListView>
	
		<Label id="folderLabel">
		<ListView id="folderList" defaultItemTemplate="repoTemplate">
			
			 <Templates>
                <ItemTemplate name="repoTemplate">
    				<ImageView id="picImage" bindId="pic"/>
    				<Label id="infoLabel" bindId="info"/>
    				<Label id="esinfoLabel" bindId="es_info"/>
                </ItemTemplate>
            </Templates>
            
            <ListSection headerTitle="Repository" id="repo"/>
            
		</ListView>
				
	</Window>

</Alloy>
